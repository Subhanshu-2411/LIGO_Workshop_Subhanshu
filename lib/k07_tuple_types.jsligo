/*
    Tuples gather a given number of values in a specific order and those values, 
    called components, can be retrieved by their index (position).
*/

type point = [int,int];

export let new_point = (x:int,y:int): point => {
    return [x, y];
};

export let abscissa = (p:point): int => {
    p[0];
};

export let ordinate = (p:point): int => {
    p[1];
}

